

<% if defined? @on_the_air %>
  <h3>On the Air</h3>
  <div class="tv-slider">
    <% @on_the_air['results'].each do |show| %>
      <%= render partial: "shared/poster", locals: {item: show, width: 154, type: "tv"} %>
    <% end %>
  </div>
<% end %>


<% if defined? @popular %>
  <h3>Popular Shows</h3>
  <div class="tv-slider">
    <% @popular['results'].each do |show| %>
      <%= render partial: "shared/poster", locals: {item: show, width: 154, type: "tv"} %>
    <% end %>
  </div>
<% end %>

<script>
  $(function(){
    $(".tv-slider").bxSlider({
        minSlides: 2,
        maxSlides: 10,
        moveSlides: 1,
        mode: 'horizontal',
        slideWidth: 150,
        slideMargin: 20,
        pager: false
    });
  })
</script>
